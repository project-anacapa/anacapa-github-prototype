<h1>Welcome, Admin!</h1>

<table class="table">
  <thead>
    <tr>
      <th>User Email</th>
      <th>Is Admin?</th>
      <th>Is Instructor?</th>
      <th>User ID</th>
      <th>Toggle Admin</th>
      <th>Toggle Insturctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.has_role? :admin %></td>
        <td><%= user.has_role? :instructor %></td>
        <td><%= user.uid %></td>
        <td><%= check_box_tag 'toggle_admin', 'yes', true %></td>
        <td><%= check_box_tag 'toggle_instructor','yes', false %></td>
      </tr>
    <% end %>
  </tbody>
</table>
